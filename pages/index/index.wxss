/**index.wxss**/
.header{
  width: 100%;
  display: flex;
}
.header .header-img{
  width: 100%;
}
.footer{
  width: 100%;
  display: flex;
}
.footer .footer-img{
  width: 100%;
}

.body{
  display: flex;
  min-height: 920rpx;
  width: 100%;
  flex-direction: column;
  background-image: url(http://s.tc.blyoo.cn/cloud/g/i9/4e6cd0d837941dfa.png);
  background-size: auto;
  background-repeat: round;
}
.body .body-input {
  width: 80%;
  margin: 0 auto;
}
.body .body-input .body-input-input{
  width: calc(100% - 10rpx);
  height: 88rpx;
  margin: 20px 0;
  background: #FFFFFF;
  border-radius: 2px;
  font-size: 24rpx;
  color: #999999;
  padding-left: 10rpx;
}
.body .body-input .phone{
  margin-top: 50px;
}

.body .body-type{
  width: 80%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  vertical-align: center;
  align-content: center;
}
.body .body-type .body-type-child{
  width: 22%;
  height: 88rpx;
  border: 1px solid #0D6FB8;
  border-radius: 1px;
  display: flex;  
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #0D6FB8;
}
.typechild{
  background: #0D6FB8;
}
.body-bottom{
  width: 80%;
  margin: 0 auto;
}
.type-world{
  font-size: 14rpx;
  color: #0D6FB8;
  margin: 8rpx 0 15rpx 0;
  display:block;
}
.type-submit{
  width: 100%;
  height:88rpx;
  background: #0D6FB8;
  border-radius: 2px;
  font-size: 24rpx;
  color: #FFFFFF;
}